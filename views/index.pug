doctype html 
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    title Login 
    
  body
    .d-flex.justify-content-center.align-items-center.w-100(style="height:100dvh")
      form(action="/dashboard" method="post").d-flex.justify-content-center.align-items-center.flex-column.w-50.gap-3.border.px-4.py-5.rounded
        .w-100
          h1 Log In
        .form-floating.d-flex.w-100
          input#username.form-control.w-100(type='text' name="username" placeholder='username')
          label(for='username') User Name
        .form-floating.w-100.positon-relative
          input#password.form-control(style="padding-right: 70px" name="password" type='password' placeholder='Password')
          label(for='password') Password
          button.bg-transparent.border-0.position-absolute.top-0.end-0.h-100.d-flex.justify-content-center.align-items-center.px-3(onclick='show()') show
        .w-100 
          input#submit.py-2.rounded.btn-primary.w-100(type="submit" value="Submit")

    script.
      const password = document.getElementById('password'),  
      Data = { username: '', password: ''}
      function show(){
        let type = 'text'
        password.type == "text" ? type = "password" : type= "text"
        password.type = type
      }
